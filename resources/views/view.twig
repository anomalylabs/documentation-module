{% extends layout('documentation') %}

{% block content %}

    <dl>
        {% for slug, section in structure %}
            <dt>{{ section.title }}</dt>
            {% for slug, documentation in section.documentation %}
                <dd>{{ html_link(documentation.path, documentation.title) }}</dd>
            {% endfor %}
        {% endfor %}
    </dl>

    <hr>

    {{ content|raw }}
{% endblock %}
