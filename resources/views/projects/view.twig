{% extends layout('documentation') %}

{% block content %}

    {{ asset_add('styles.css', 'anomaly.module.documentation::scss/clipboard.scss', ['min']) }}
    {{ asset_add('styles.css', 'anomaly.module.documentation::scss/anchors.scss', ['min']) }}
    {{ asset_add('styles.css', 'anomaly.module.documentation::scss/prism.scss', ['min']) }}
    {{ asset_add('styles.css', 'anomaly.module.documentation::scss/code.scss', ['min']) }}

    {{ asset_add('scripts.js', 'anomaly.module.documentation::js/plugins/*', ['min']) }}
    {{ asset_add('scripts.js', 'anomaly.module.documentation::js/initialize.js', ['min']) }}

    <div id="documentation">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">

                    <div class="jumbotron text-center">

                        <h1>{{ project.title }}</h1>

                        {% if project.description.value %}
                            <p>{{ project.description }}</p>
                        {% endif %}

                    </div>

                </div>
            </div>

            <div class="row">

                <aside class="col-lg-3">
                    {{ documentation()|raw }}
                </aside>

                <div class="col-lg-9">

                    {{ page.content|markdown|raw }}

                    <hr>

                    <div class="row">

                        <aside class="col-lg-6">
                            {% if previous %}
                                <a href="{{ previous.route('view') }}" class="btn btn-default">
                                    {{ trans('anomaly.module.documentation::message.previous_page') }}
                                </a>
                            {% endif %}
                        </aside>

                        <div class="col-lg-6 text-right">
                            {% if next %}
                                <a href="{{ next.route('view') }}" class="btn btn-default">
                                    {{ trans('anomaly.module.documentation::message.next_page') }}
                                </a>
                            {% endif %}
                        </div>

                    </div>


                </div>

            </div>

        </div>
    </div>

{% endblock %}
