{% extends layout(page.data('layout', 'documentation')) %}

{% block content %}
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-2 documentation__sidebar documentation__sidebar--left">
                {{ documentation()|raw }}
            </div>

            <div class="col-lg-8 documentation__content">

                {{ breadcrumb() }}

                {% include "anomaly.module.documentation::partials/controls" %}

                {{ page.content.value|markdown|raw }}

            </div>

            <div class="col-lg-2 documentation__sidebar documentation__sidebar--right">
                <div class="documentation__toc"></div>
            </div>

        </div>
    </div>
{% endblock %}
