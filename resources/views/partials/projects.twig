{% for row in projects.chunk(3) %}
    <div class="row">
        {% for project in row %}

            <div class="col-lg-4">
                <div class="panel panel-default text-center">
                    <div class="panel-body">

                        <h3 class="panel-heading">
                            {{ project.title }}<br>
                            <small>{{ str_singular(project.category.name.value) }}</small>
                        </h3>

                        <div class="tags">
                            {% if project.tags.value %}
                                {{ project.tags.labels('label-default label-sm')|join|raw }}
                            {% endif %}
                        </div>

                        <p>
                            {{ project.description }}
                        </p>

                        <br>

                        <a href="{{ project.route('view') }}" class="btn btn-sm btn-block btn-primary">
                            Documentation
                        </a>

                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
{% endfor %}
